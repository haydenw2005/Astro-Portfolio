---
import AboutMe from '../components/AboutMe';
import { DynamicStars } from '../components/DynamicStars';
import Welcome from '../components/Welcome';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Hayden's Portfolio">
	<DynamicStars client:load />
	<section id="welcome">
		<div class="mx-auto p-4 max-w-3xl text-white text-xl leading-relaxed flex items-center min-h-screen ">
			<Welcome />
		</div>
	</section>
	<section id="about-me">
		<div class="mx-auto p-4  max-w-[80%] text-white text-xl leading-relaxed flex items-center min-h-screen">
			<AboutMe client:load />

		</div>
	</section>
	<section id="projects">

	</section>
	<section id="interests">
		
	</section>

	<section id="contact"></section>
</Layout>

