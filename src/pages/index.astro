---

<Layout title="Hayden White" description="Explore the digital world of Hayden White">
  <div class="relative">
    <DynamicStars client:load/>
    <div class="relative z-10">
      <section id="welcome">
        <div class="mx-auto p-4 max-w-[95%] md:max-w-[50%] text-white text-xl leading-relaxed flex items-center min-h-screen">
          <Welcome />
        </div>
      </section>
      <div class="flex">
        
        <div class="flex-grow mt-[0%] min-h-screen">

          <FileTree client:load  />
        </div>
        <div class="flex-grow">
          <section id="about-me">
            <div class="overflow-hidden">
              <div class="mx-auto pr-4 max-w-[90%] text-white text-xl leading-relaxed flex items-center min-h-screen">
                <AboutMe client:visible optimizedTechIcons={optimizedTechIcons} optimizedMeImages={optimizedMeImages} />
              </div>
            </div>
          </section>
          <section id="projects">
            <div class="mx-auto pr-4 max-w-[90%] text-white text-xl leading-relaxed flex items-center min-h-screen">
              <Projects client:visible />
            </div>
          </section>
         
          <section id="travel">
            <div class="mx-auto p-4 max-w-[90%] md:max-w-[50%] text-white text-xl leading-relaxed flex items-center">
              <Travel client:visible />
            </div>
          </section>
          <section id="contact">
            <!-- Content for contact section -->
          </section>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  const sections = document.querySelectorAll('section[id]');
  const observerOptions = {
    root: null,
    rootMargin: '0px',
    threshold: 0.5
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const newHash = `#${entry.target.id}`;
        if (window.location.hash !== newHash) {
          history.replaceState(null, '', newHash);
          // Dispatch a custom hashchange event
          window.dispatchEvent(new HashChangeEvent('hashchange'));
        }
      }
    });
  }, observerOptions);

  sections.forEach(section => {
    observer.observe(section);
  });
</script>



